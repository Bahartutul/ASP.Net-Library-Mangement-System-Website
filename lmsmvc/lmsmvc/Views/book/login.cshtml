
@{
    Layout = "~/views/Shared/view.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>login</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <form method="post">
                    <div class="panel-body">
                        <div class="form-group">

                            <label>Username</label>
                            <input type="text" name="username" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control" />
                        </div>
                        <div class="form-group">
                            @Html.ActionLink("SING UP", "signup")
                            <!--a href="~/Controllers/bookControllers/singup">Sing Up</!a-->
                            <input type="submit" value="Login" name="btn" class="btn btn-primary pull-right glyphicon glyphicon-log-in" />

                        </div>
                        <div class="form-group">

                            <label style="color:red">@ViewBag.message</label>

                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <div>
    </div>
</body>
</html>

